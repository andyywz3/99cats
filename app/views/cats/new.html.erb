<h1>Add a cat!</h1>

<form action="<%= cats_url %>" method="post">

  <label for="cat_name">Name:</label>
  <input type="text" name="cat[name]">
  <br>

  <label for="cat_birthday">Birthday:</label>
  <input type="date" name="cat[birthday]">
  <br>

  <label for="cat_sex">Sex:</label>
  <input type="radio" name="cat[sex]" id="female" value="female">
  <label for="female">Female </label>
  <input type="radio" name="cat[sex]" id="male" value="male">
   <label for="male">Male</label>
  <br>

  <label for="cat_color">Color</label>
  <select name="cat[color]">
    <option selected="selected" disabled="disabled">Select a color</option>
    <option value="red">Red</option>
    <option value="green">Green</option>
    <option value="blue">Blue</option>
  </select>

  <br> <br>
  <input type="submit" value="Add Cat">

</form>